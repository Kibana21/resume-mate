# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# LLM Parameters
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=4000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/resume_mate
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true  # Set to false in production

# Security
SECRET_KEY=your_secret_key_here_change_in_production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
JWT_SECRET_KEY=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# File Storage
UPLOAD_DIR=./data/uploads
MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS=.pdf,.docx,.doc,.txt

# Feature Flags
ENABLE_OCR=true
ENABLE_DIVISION_CLASSIFICATION=true
ENABLE_HR_INSIGHTS=true
ENABLE_QUALITY_SCORING=true
STRICT_EXTRACTION_MODE=false

# DSPy Configuration
DSPY_CACHE_DIR=./.dspy_cache
DSPY_TRACES_DIR=./logs/dspy_traces
ENABLE_DSPY_OPTIMIZATION=false  # Enable for training/optimization

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=./logs/app.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Division-Specific Configuration
DEFAULT_DIVISION=technology
ENABLE_MULTI_DIVISION_SUPPORT=true

# Extraction Timeouts (seconds)
CV_EXTRACTION_TIMEOUT=120
JD_EXTRACTION_TIMEOUT=60
MATCHING_TIMEOUT=30

# Performance
BATCH_SIZE=10
MAX_CONCURRENT_EXTRACTIONS=5
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600

# Development
DEBUG=true
RELOAD_ON_CHANGE=true
